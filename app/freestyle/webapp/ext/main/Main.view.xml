<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="freestyle.app.freestyle.ext.main.Main"
    xmlns:macrosTable="sap.fe.macros.table"
>
    <Page
        id="Main"
        title="Flexible Programming Modedgsddsf"
    >
        <Panel>
            <headerToolbar>
                <OverflowToolbar>
                    <CheckBox
                        text="{i18n>toggleEditMode}"
                        selected="{ui>/isEditable}"
                        select=".onSelectEdit"
                    />
                    <CheckBox
                        text="{i18n>toggleTableBusy}"
                        selected="{ui>/isBusy}"
                        select=".onSelectBusy"
                    />
                </OverflowToolbar>
            </headerToolbar>
        </Panel>
        <content>
            <macros:FilterBar
                id="FilterBar"
                metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
            />
            <macros:Table
                selectionMode="None"
                id="LineItemTable"
                readOnly="false"
                metaPath="@com.sap.vocabularies.UI.v1.LineItem"
                filterBar="FilterBar"
                
            >
                <macros:actions>
                    <macrosTable:Action
                        key="customAction"
                        text="Save"
                        press=".saveDocument"
                        placement="After"
                        anchor="DataFieldForAction::Service.toggleBoolean"
                        requiresSelection="false"
                    />
                    <macrosTable:ActionGroup
                        text="Grouped Actions"
                        placement="After"
                        anchor="customAction"
                        key="customActionGroup"
                    >
                        <macrosTable:Action
                            text="Menu Action 1"
                            press=".onPressMenuAction"
                            key="action1"
                        />
                        <macrosTable:Action
                            text="Menu Action 2"
                            press=".onPressMenuAction"
                            enabled="true"
                            key="action2"
                        />
                    </macrosTable:ActionGroup>
                </macros:actions>
            </macros:Table>
        </content>


        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="saveDocument"
                    type="Emphasized"
                    visible="{viewModel>/editable}"
                />
                <Button
                    id="cancelButton"
                    text="Cancel"
                    press="cancelDocument"
                    visible="{viewModel>/editable}"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
